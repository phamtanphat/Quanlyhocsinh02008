<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewhoten"
        android:textColor="#f20"
        android:layout_margin="3dp"
        android:textSize="28sp"
        android:text="Ho va ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewnamsinh"
        android:textSize="23sp"
        android:textColor="#324dba"
        android:text="Nam sinh"
        android:layout_margin="3dp"
        android:layout_below="@+id/textviewhoten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewdiachi"
        android:textColor="#b6760f"
        android:text="Cu chi"
        android:textSize="25sp"
        android:layout_margin="3dp"
        android:layout_below="@+id/textviewhoten"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>